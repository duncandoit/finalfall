   "version": "0.2.0",
   "configurations": 
   [
    {
        "name": "Run Test (debug)",
        "type": "cppdbg",
        "request": "launch",
        "program": ".${workspaceFolder}/test/build/macosx/bin/debug/korintest",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/test/",
        "environment": [],
        "externalConsole": true,
        "MIMode": "lldb",
        "setupCommands": 
        [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ],
        "preLaunchTask": "Build Tests (debug)",
        "miDebuggerPath": "/usr/bin/lldb-mi",
        "logging": 
        {
            "trace": true,
            "traceResponse": true,
            "engineLogging": true,
            "programOutput": true,
            "exceptions": true
        },
        "internalConsoleOptions": "openOnSessionStart" 
    }
    ]
}